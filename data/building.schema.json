{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "/data/buildings.schema.json",
    "title": "Building",
    "description": "Design a new building.",
    "type": "object",
    "required": ["name", "desc", "iconURI", "portraitURI"],
    "properties": {
        "name": {
            "description": "Title text.",
            "type": "string"
        },
        "desc": {
            "description": "Description text.",
            "type": "string"
        },
        "iconURI": {
            "description": "Art asset path.",
            "type": "string"
        },
        "portraitURI": {
            "description": "Art asset path.",
            "type": "string"
        },
        "counters": {
            "description": "Define 0-3 counters that each display 0-4 tally marks.",
            "type": "array",
            "maxItems": 4,
            "items": {
                "type": "object",
                "required": ["key", "name", "desc", "emblem", "value"],
                "properties": {
                    "key": {
                        "description": "Key of associated variable in JS.",
                        "type": "string"
                    },
                    "name": {
                        "description": "Tooltip title.",
                        "type": "string"
                    },
                    "desc": {
                        "description": "Tooltip description.",
                        "type": "string"
                    },
                    "emblem": {
                        "description": "Tally mark. A single unicode emoji character.",
                        "type": "string"
                    },
                    "value": {
                        "description": "Starting value in JSON. Current value in JS.",
                        "type": "number",
                        "minimum": 0,
                        "maximum": 4
                    }
                }
            }
        },
        "actions": {
            "description": "Define 0-4 buttons that run gameplay functions.",
            "type": "array",
            "maxItems": 4,
            "items": {
                "type": "object",
                "required": ["iconURI"],
                "properties": {
                    "iconURI": {
                        "description": "Art asset path.",
                        "type": "string"
                    },
                    "adjust": {
                        "description": "Adjust resources, by a positive or negative amount.",
                        "type": "object",
                        "properties": {
                            "days": {
                                "description": "Game days.",
                                "type": "number"
                            },
                            "hp": {
                                "description": "Player health points.",
                                "type": "number"
                            },
                            "wood": {
                                "description": "Player wood resources.",
                                "type": "number"
                            }
                        }
                    }
                }
            }
        }
    }
}
