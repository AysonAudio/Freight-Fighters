{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "/data/building.schema.json",
    "title": "Building",
    "description": "Design a new building.",
    "type": "object",
    "required": ["name", "desc", "iconURI", "portraitURI"],
    "properties": {
        "name": {
            "description": "Title text.",
            "type": "string"
        },
        "desc": {
            "description": "Description text.",
            "type": "string"
        },
        "iconURI": {
            "description": "Art asset path.",
            "type": "string"
        },
        "portraitURI": {
            "description": "Art asset path.",
            "type": "string"
        },
        "counterIDs": {
            "description": "Counters to display UI info for.",
            "type": "array",
            "maxItems": 3,
            "items": {
                "description": "ID of object from counter.json.",
                "type": "string"
            }
        },
        "actions": {
            "description": "Define 0-4 buttons that run gameplay functions.",
            "type": "array",
            "maxItems": 4,
            "items": {
                "type": "object",
                "required": ["iconURI"],
                "properties": {
                    "iconURI": {
                        "description": "Art asset path.",
                        "type": "string"
                    },
                    "adjust": {
                        "description": "Adjust resources, by a positive or negative amount.",
                        "type": "object",
                        "properties": {
                            "days": {
                                "description": "Game days.",
                                "type": "number"
                            },
                            "hp": {
                                "description": "Player health points.",
                                "type": "number"
                            },
                            "wood": {
                                "description": "Player wood resources.",
                                "type": "number"
                            }
                        }
                    }
                }
            }
        }
    }
}
