{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "/data/enemy.schema.json",

    "title": "Enemy",
    "description": "Design a new Enemy.",
    "type": "object",

    "$ref": "ui-panel.schema.json",

    "required": ["name", "artURI", "danger", "hp"],
    "properties": {
        "name": {
            "description": "Card title.",
            "type": "string"
        },
        "artURI": {
            "description": "Card art.",
            "type": "string"
        },
        "hitChance": {
            "description": "Percent chance to attack on day end.",
            "type": "number"
        },
        "hitDamage": {
            "description": "Damage dealt if attack successful.",
            "type": "number"
        }
    }
}
